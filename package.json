{
  "name": "sensorica",
  "version": "1.4.0",
  "description": "Telegram bot with ChatGPT",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "lint": "make lint",
    "format": "prettier -w ./src ./server ./adapter",
    "build": "make build",
    "debug": "wrangler dev --local",
    "test": "ava",
    "wrangler": "wrangler",
    "wrangler:config": "wrangler whoami",
    "deploy:dist": "wrangler deploy",
    "deploy:build": "npm run build && wrangler deploy",
    "server:prod": "node ./server/index.js",
    "server": "nodemon --ignore 'dist/' 'src/' wrangler.toml ./server/index.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "npm run lint"
    ]
  },
  "ava": {
    "files": [
      "**/*/*.test.js",
      "!dist/"
    ]
  },
  "devDependencies": {
    "ava": "^6.0.1",
    "esbuild": "^0.17.11",
    "eslint": "^8.55.0",
    "eslint-config-google": "^0.14.0",
    "express-validator": "^7.0.1",
    "husky": "^8.0.3",
    "js-htmlencode": "^0.3.0",
    "lint-staged": "^15.1.0",
    "miniflare": "^3.20231030.4",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "request": "^2.88.2",
    "wrangler": "^3.22.0"
  },
  "exports": {
    "import": "./main.js"
  },
  "files": [
    "main.js",
    "src/**/*",
    "package.json",
    "package-lock.json"
  ],
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fs": "^0.0.1-security",
    "js-htmlencode": "^0.3.0",
    "openai": "^4.14.2",
    "pm2": "^5.3.0",
    "request": "^2.88.2",
    "require": "^2.4.20",
    "sqlite3": "^5.1.7"
  }
}
